pkgname=py3-botocore
_pkgname=botocore
pkgver=1.12.75
pkgrel=2
pkgdesc="The low-level, core functionality of Boto3"
url="https://github.com/boto/botocore"
arch="noarch"
license="Apache-2.0"
depends="py3-dateutil py3-docutils py3-jmespath py3-urllib3"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgreal:0:1}/$_pkgreal/$_pkgreal-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

replaces=py-botocore # Backwards compatibility
provides=py-botocore=$pkgver-r$pkgrel # Backwards compatibility

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py check
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="69e68ab4c9dfd0a19f645bc67a88a579bd056d89d9bba336b54d27eb5170ddb9983e7514f335485437dbbaa08d70f4e1abce91a0aa1ab89629150bf1582733cd  botocore-1.12.75.tar.gz"
