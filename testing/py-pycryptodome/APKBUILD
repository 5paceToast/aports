# Contributor: Leonardo Arena <rnalrd@alpinelinux.org>
# Maintainer: Kevin Daudt <kdaudt@alpinelinux.org>
pkgname=py-pycryptodome
pkgver=3.8.2
pkgrel=0
pkgdesc="Self-contained cryptographic library"
url="https://www.pycryptodome.org"
arch="all"
license="BSD-2-Clause Unlicense"
depends=""
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="$pkgname-$pkgver.tar.gz::https://github.com/Legrandin/pycryptodome/archive/v$pkgver.tar.gz"
builddir="$srcdir"/pycryptodome-$pkgver

build() {
	cd "$builddir"
	python2 setup.py --quiet build
	python3 setup.py --quiet build
}

check() {
        cd "$builddir"
        python2 setup.py test
        python3 setup.py test
}

package() {
	cd "$builddir"
	mkdir -p "$pkgdir"/usr/bin
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	local pyver="${1:6:1}"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py --quiet install --prefix=/usr --root="$subpkgdir"
}

sha512sums="4be61d7dafd38bfb011f6a585645fc8b6e4951c7173e7cb00c1e863c4a233e2285068d963e4dae55050c7dd198338af1d115dda3e6eece6ffda515af8d1136e2  py-pycryptodome-3.8.2.tar.gz"
