sha512sums="c1feb452955882beb64635e75594bc30acdc8fd4e102107b956e18a5bdea1b802b53464c4c4beef94eb22ad3ad7471b7bff17b566da6438247e5b05146e82ff3  gnome-disk-utility-3.12.1.tar.xz
