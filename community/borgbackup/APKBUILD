# Maintainer: Olivier Mauras <olivier@mauras.ch>
pkgname=borgbackup
pkgver=1.1.0
pkgrel=0
pkgdesc="Deduplicating backup program"
url="https://borgbackup.readthedocs.io/"
arch="all"
license="BSD"
depends="python3 py3-msgpack"
depends_dev=""
makedepends="python3-dev lz4-dev acl-dev attr-dev libressl-dev"
install=""
subpackages=""
source="https://github.com/$pkgname/borg/releases/download/$pkgver/$pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver
build() {
        cd "$builddir"
        python3 setup.py build || return 1
}

package() {
        cd "$builddir"
        python3 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

sha512sums="052c9780ede503d0ace18ceea2f7d323027c553418c09e7c2202bb3a72d9ff7d34cfd35e2beab42e5cc65d9c28748d469060799c8dd87dcc3fdd9bfa9ba8e9f2  borgbackup-1.1.0.tar.gz"
