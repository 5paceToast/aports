# Maintainer: Carlo Landmeter <clandmeter@gmail.com>
pkgname=libzip
pkgver=1.2.0
pkgrel=2
pkgdesc="A C library for reading, creating, and modifying zip archives"
url="http://www.nih.at/libzip/index.html"
arch="all"
license="BSD"
depends=
depends_dev="zlib-dev"
makedepends="$depends_dev perl"
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools"
source="http://www.nih.at/libzip/$pkgname-$pkgver.tar.gz
	CVE-2017-14107.patch
	CVE-2017-12858.patch
	"
builddir="$srcdir/$pkgname-$pkgver"

# secfixes:
#   1.2.0-r2:
#     - CVE-2017-14107
#     - CVE-2017-12858

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" -j1 install install-man || return 1
	mv "$pkgdir"/usr/lib/libzip/include/* "$pkgdir"/usr/include || return 1
	rm -fr "$pkgdir"/usr/lib/libzip
}

tools() {
	pkgdesc="$pkgname cmp and merge tools"
	install -d "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr || return 1
}

