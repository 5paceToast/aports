# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=py3-livereload
_pkgname=livereload
pkgver=2.6.0
pkgrel=0
pkgdesc="livereload server in python"
url="https://github.com/lepture/python-livereload"
arch="noarch"
license="BSD"
replaces="py-livereload" # for backwards compatibility
provides="py-livereload=$pkgver-r$pkgrel" # for backwards compatibility
depends=""
depends_dev=""
makedepends="$depends_dev py3-setuptools"
install=""
subpackages=""
source="python-livereload-$pkgver.tar.gz::https://github.com/lepture/python-livereload/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/python-livereload-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
        cd "$_builddir"
        python3 setup.py build || return 1
}

package() {
        cd "$_builddir"
        python3 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

sha512sums="351fa56c64a3bea7c43e1a60c3633bcb80a6093aaadaa73e8f0bc6a27f939c52f272d60922e5d1d956834b7cff16b8c7ee702cbc85473e554629a38efaef9993  python-livereload-2.6.0.tar.gz"
