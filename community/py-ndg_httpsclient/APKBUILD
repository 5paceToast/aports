# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=py-ndg_httpsclient
pkgver=0.4.4
pkgrel=0
pkgdesc="HTTPS client implementation for httplib and urllib2 based on PyOpenSSL"
url="https://github.com/cedadev/ndg_httpsclient"
arch="noarch"
license="BSD"
depends="py-openssl py-asn1"
depends_dev=""
makedepends="$depends_dev py-setuptools"
install=""
subpackages=""
source="ndg_httpsclient-$pkgver.tar.gz::https://github.com/cedadev/ndg_httpsclient/archive/$pkgver.tar.gz"

_builddir="$srcdir"/ndg_httpsclient-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python2 setup.py build || return 1
}

package() {
	cd "$_builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

sha512sums="604ea4a27915cd338549c0c51f5ec3419a56f1c24472b2ecded7cb7e9939a73b3b93cdbe0b62ea27793949aa035253f767f330ffcd8d1c044ae3516db99dc59c  ndg_httpsclient-0.4.4.tar.gz"
