# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
_gemname=bundler
pkgname=ruby-$_gemname
pkgver=1.16.1
pkgrel=0
pkgdesc="Manage an application's gem dependencies"
url="https://bundler.io/"
arch="noarch"
license="MIT"
depends="ruby ruby-io-console"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
builddir="$srcdir/$_gemname-$pkgver"

package() {
	local gemdir="$pkgdir/$(ruby -rubygems -e 'puts Gem.default_dir')"

	mkdir -p "$pkgdir"/usr/bin

	gem install --local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$gemdir"/build_info \
		"$gemdir"/doc

	cd "$pkgdir"
	local path; for path in usr/lib/ruby/gems/*/bin/*; do
		if [ -f "$path" ]; then
			ln -s /$path "$pkgdir"/usr/bin/
		fi
	done
}

sha512sums="2cca87aa17b61df98ef98a648a7d7cfe0529015f1278e8cb2298bb12544157933d723bd666d945bcdbaceacbf97a092a3848e2a587bd01cffa73c662d37d4834  bundler-1.16.1.gem"
