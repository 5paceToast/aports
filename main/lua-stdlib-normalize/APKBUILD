# Maintainer: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
_pkgname=stdlib-normalize
pkgname=lua-$_pkgname
pkgver=2.0.1
pkgrel=0
pkgdesc="Normalized Lua functions"
url="https://lua-stdlib.github.io/normalize/"
arch="all"
license="MIT"
depends="lua-stdlib-debug"
options="!check"
source="$_pkgname-$pkgver.tar.gz::https://github.com/lua-stdlib/normalize/archive/v$pkgver.tar.gz"
builddir="$srcdir/normalize-$pkgver/lib/std/normalize"

build() {
	:
}

package() {
	cd "$builddir"

	local luadir=$pkgdir/usr/share/lua
	local cdir=common/std/normalize

	for mod in *.lua; do
		install -D -m 644 $mod "$luadir"/$cdir/$mod
	done

	for ver in 5.1 5.2 5.3; do
		local dir=$luadir/$ver/std
		mkdir -p "$dir"
		ln -s ../../$cdir "$dir"
	done
}

sha512sums="a5dd11d65f613c16dfaae59703f1c296a6d74a56e6dfd12c0e288fa60bb0a344474922a0fe298a8a77d1d18672f45d21c12e1b3fb2ef6b306687975de336cb5c  stdlib-normalize-2.0.1.tar.gz"
