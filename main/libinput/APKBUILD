pkgname=libinput
pkgver=1.8.3
pkgrel=0
pkgdesc="Library for handling input devices"
url="http://www.freedesktop.org/wiki/Software/libinput/"
arch="all"
license="MIT"
depends=""
makedepends="mtdev-dev eudev-dev libevdev-dev grep"
subpackages="$pkgname-dev $pkgname-doc $pkgname-libs"
options="!check"
source="http://freedesktop.org/software/$pkgname/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--mandir=/usr/share/man \
		--with-udev-dir=/lib/udev \
		--disable-documentation \
		--disable-debug-gui \
		--disable-libwacom \
		--disable-tests
	make
}

package() {
	make DESTDIR="$pkgdir" -C "$builddir" install
}

sha512sums="88006d217e3507858fa6b9ac1f25c267255fb51d1bcf1208d2afd423bf2a9292944bc5526ea91f27fad3ff04c2f9f43ab3aa25fd9fb7ace1231ecd33ddf18de6  libinput-1.8.3.tar.xz"
