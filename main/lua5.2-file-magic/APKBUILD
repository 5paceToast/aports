# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=lua5.2-file-magic
_pkgname=lua-file-magic
pkgver=0.2
pkgrel=0
pkgdesc="Lua binding to libmagic"
url="https://github.com/ncopa/lua-file-magic"
arch="all"
license="LGPL"
depends="lua5.2"
makedepends="lua5.2-dev file-dev"
source="$_pkgname-$pkgver.tar.gz::https://github.com/ncopa/$_pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"

	local cmod_dir=$(pkg-config --variable=INSTALL_CMOD lua5.2)
	install -D magic.so "$pkgdir"/$cmod_dir/magic.so
}

sha512sums="f107b27410a3acf1305536bed064fa730943369afbeaeadc4b723334d4c16c330fc8544e426fda223f5b10353d83d028f306a48ec5d6f6cb905fda45271b94c8  lua-file-magic-0.2.tar.gz"
